amends "./pkl/Config.pkl"
import "./pkl/presets/Go.pkl"
import "./pkl/release/SourceHut.pkl"

name = "goldberg"
version = "0.1.0"

use {
  Go.preset(versionedName, "main.go", Go.defaultArch, Go.defaultOS)
  SourceHut.preset(
    source,
    Go.assets(versionedName, Go.defaultArch, Go.defaultOS),
    "v" + version,
  )
}

source {
  repo = "goldberg"
}
