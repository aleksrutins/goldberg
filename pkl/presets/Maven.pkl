module com.farthergate.goldberg.presets.Maven

import "../Config.pkl"

function package(wrapper: Boolean) = new Config.Preset {
  name = "maven:package"
  defaultSteps {
    new {
      packages { "java-latest-openjdk-devel" }
      name = "maven:package"
      commands {
        new {
          if (wrapper) "./mvnw" else "mvn"
          "package"
        }
      }
    }
  }
}
